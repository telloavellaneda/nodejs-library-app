<%- include ../layouts/header.ejs %>
    <br/>
    <br/>
    <br/>
    <a href="/books/newbook" class="btn btn-primary" type="button">Create new book</a>
    <br/>
    <br/>
    <table class="table table-light">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <% for( let ejsBook = 0; ejsBook < books.length; ejsBook++ ) { %>    
        <tbody>
            <tr>
                <td> <%= books[ejsBook].id %> </td>
                <td> <%= books[ejsBook].name %> </td>
                <td> <img class="img-thumbnail" width="100" src="/images/<%= books[ejsBook].image %>" alt=""></td>
                <td> 
                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                        <form class="form-inline" method="get" action="/books/edit/<%= books[ejsBook].id %>">
                        <button class="btn btn-warning" type="submit">Edit</button></form>
                    </div>
                        |
                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                        <form class="form-inline" method="post" action="/books/delete/<%= books[ejsBook].id %>">
                        <button class="btn btn-danger" type="submit">Delete</button></form>         
                    </div>
                    </td> 
            </tr>
        <% } %>
        </tbody>
    </table>
    <%- include ../layouts/footer.ejs %>