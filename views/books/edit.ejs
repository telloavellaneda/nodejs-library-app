<%- include ../layouts/header.ejs %>
<br/>
<br/>
<br/>
<div class="card">
    <div class="card-header">
        Captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Datos de libro</h5>
        <p class="card-text">
            <form method="post" action="../update/" enctype="multipart/form-data">
                <input type="hidden" name="id" value="<%= book.id %>">
                <div class="form-group">
                    <label for="my-input">Name: </label>
                    <input id="my-input" class="form-control" type="text" name="bookname" value="<%= book.name %>">
                </div>
                <div class="form-group">
                    <label for="my-input">Image:</label>
                    <img class="img-thumbnail" src="../../images/<%= book.image %>" alt="<%= book.id %>" width="100">
                    <input id="my-input" class="form-control-file" type="file" name="bookimg">
                </div>
                <button class="btn btn-success" type="submit">Update</button>
                <button class="btn btn-primary" href="/books" type="submit">Cancel</button>
            </form>
        </p>
    </div>
</div>
<%- include ../layouts/footer.ejs %></div>