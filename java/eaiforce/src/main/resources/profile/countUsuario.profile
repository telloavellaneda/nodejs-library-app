SELECT 
	A.{1}
	,B.NOMBRE || '' '' || B.APELLIDO_PATERNO USUARIO
	,B.PERFIL
	,B.EMAIL
	,B.STATUS
FROM 
	(
		SELECT
			{1}
		FROM 
		(
			SELECT 
				A.{1}
				,COUNT(*)
			FROM
				EAI_REL_CLIENTES A
				,EAI_ADM_USUARIOS B
			WHERE 1 = 1
				AND ID_CLIENTE = {0}
				AND A.{1} = B.ID_USUARIO
			GROUP BY A.{1}
		)
		UNION
		SELECT
			{1}
		FROM
		(
			SELECT ID_USUARIO {1}
			FROM EAI_ADM_USUARIOS
			WHERE 1=1
				AND ID_CLIENTE = {0}
				{2}
				AND STATUS = 1 
		)
	) A,
	EAI_ADM_USUARIOS B
WHERE A.{1} = B.ID_USUARIO
ORDER BY B.NOMBRE || '' '' || B.APELLIDO_PATERNO